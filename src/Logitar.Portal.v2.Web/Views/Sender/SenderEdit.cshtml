@using Logitar.Portal.v2.Contracts.Senders;

@model Sender
@{
  Layout = "_Layout";

  ViewBag.Title = "Create sender";
  if (Model != null)
  {
    ViewBag.Title = Model.DisplayName == null ? Model.EmailAddress : $"{Model.DisplayName} <{Model.EmailAddress}>";
  }
}

@if (Model == null)
{
  <sender-edit provider="@(Context.Request.Query["provider"])" realm="@(Context.Request.Query["realm"])"></sender-edit>
}
else
{
  <sender-edit json="@(ModelSerializer.Serialize(Model))" status="@(Context.Request.Query["status"])"></sender-edit>
}
