@{
  string link = Model.Resource("PasswordRecovery_PageUrl").Replace("{token}", Model.Variable("Token"));
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="@(Model.User?.Locale?.Code)" xml:lang="@(Model.User?.Locale?.Code)">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
  <p><strong>@(Model.Resource("PasswordRecovery_Hello").Replace("{name}", Model.User?.FullName))</strong></p>
  <p>@(Model.Resource("PasswordRecovery_PasswordLost"))</p>
  <p>
    @(Model.Resource("PasswordRecovery_ClickLink"))
    <br />
    <a href="@(link)">@(link)</a>
  </p>
  <p>@(Model.Resource("PasswordRecovery_OtherwiseDelete"))</p>
  <p>
    @(Model.Resource("Cordially"))
    <br />
    <i>@(Model.Resource("Team"))</i>
  </p>
</body>
</html>
